<!-- TODO: deal with the heading hierarchy -->
<div class="sjrk-storyTelling-storyPreviewerPage1 sjrkc-storyTelling-storyPreviewerPage1">
    <div class="grid-12">
        <div class="col-6">
            <h2 class="sjrk-storyTelling-story-heading">{{localizedMessages.message_storyPreviewText}}</h2>
        </div>
        <div class="col-6 sjrk-storyTelling-story-headingRight">
            <a class="sjrk-storyTelling-readOtherStories" href="#">{{localizedMessages.message_storyTranslateText}}</a>
        </div>
    </div>
    <div class="sjrk-storyTelling-story-previewPane">
        <div class="{{uiStrings.storyTitleClasses}}">{{dynamicValues.title}}</div>
        <div class="{{uiStrings.storyAuthorClasses}}">{{localizedMessages.message_storyAuthorText}}</div>

        <div class="sjrk-storyTelling-link-container">
            <a class="{{uiStrings.storyListenToClasses}}" href="javascript:void(0);">{{localizedMessages.message_storyListenToText}}</a>
        </div>

        <div class="{{uiStrings.storyContentClasses}}">{{dynamicValues.content}}</div>

        <div class="sjrk-storyTelling-link-container">
            <a class="{{uiStrings.storyReadMoreClasses}}" href="#">{{localizedMessages.message_storyReadMoreText}}</a>
        </div>

        <div class="sjrk-storyTelling-language-container">
            {{localizedMessages.message_storyLanguageLabelText}}: <span class="{{uiStrings.storyLanguageClasses}}">{{dynamicValues.languageName}}</span>
        </div>

        <div class="sjrk-storyTelling-tags-container">
            {{localizedMessages.message_storyListTagsLabelText}}: <span class="{{uiStrings.storyListTagsClasses}}">
                {{#each dynamicValues.tags}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
            </span>
        </div>

        <div class="sjrk-storyTelling-categories-container">
            {{localizedMessages.message_storyListCategoriesLabelText}}: <span class="{{uiStrings.storyCategoryClasses}}">
                {{#each dynamicValues.storyCategories}}
                    {{lookup ../localizedMessages.availableCategories this}}{{#unless @last}}, {{/unless}}
                {{/each}}
            </span>
        </div>
    </div>
    <div class="grid-12">
        <div class="col-6 sjrk-storyTelling-link-container">
            <a href="#" class="{{uiStrings.storyShareClasses}}">{{localizedMessages.message_storyShareText}}</a>
        </div>

        <div class="col-6 sjrk-storyTelling-link-container sjrk-storyTelling-link-container-right">
            <a href="#" class="{{uiStrings.storySaveNoShareClasses}}">{{localizedMessages.message_storySaveNoShareText}}</a>
        </div>

        <div>
            <a href="javascript:void(0)" class="{{uiStrings.storyPreviewerPreviousClasses}}">{{localizedMessages.message_storyGoBack}}</a>
        </div>
    </div>
</div>
