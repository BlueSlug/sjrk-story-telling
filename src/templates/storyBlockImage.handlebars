<div lang="{{localizedMessages.language}}" class="sjrk-st-block">
    <!-- repeated markup start -->
    {{#getIds "storySelectionCheckbox"}}
        <div class="sjrk-st-label-container fl-hidden-accessible">
            <label for="$id">{{../localizedMessages.message_blockSelectionCheckboxLabel}}</label>
        </div>
        <div class="sjrk-st-block-selection-checkbox-container">
            <input id="$id" class="sjrk-st-block-selection-checkbox sjrkc-st-block-selection-checkbox" type="checkbox">
        </div>
    {{/getIds}}

    {{#getIds "storyBlockHeading"}}
        <div class="sjrk-st-block-alternative-content">
            <div class="sjrk-st-label-container fl-hidden-accessible">
                <label for="$id">{{../localizedMessages.message_blockHeadingLabel}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-st-block-heading sjrkc-st-block-heading" placeholder="{{../localizedMessages.message_blockHeadingPlaceholder}}"></input>
            </div>
        </div>
    {{/getIds}}
    <!-- repeated markup end -->

    <div class="sjrk-st-block-image-preview-container">
        <img class="sjrkc-st-block-image-preview sjrk-st-block-image-preview" src="" alt="" />
    </div>
    <form>
        <div class="sjrk-st-block-image-buttons-container">
            <button type="button" class="sjrkc-st-block-image-upload-button sjrk-st-block-image-upload-button">{{localizedMessages.message_imageUploadButton}}</button>
            {{#if dynamicValues.hasMobileCamera}}
                <button type="button" class="sjrkc-st-block-image-capture-button sjrk-st-block-image-capture-button">{{localizedMessages.message_imageCaptureButton}}</button>
            {{/if}}
        </div>

        <div class="sjrk-st-block-image-description-container">
            {{#getIds "storyBlockImageDescription"}}
                <div class="sjrk-st-label-container fl-hidden-accessible">
                    <label for="$id">{{../localizedMessages.message_imageDescriptionInputLabel}}</label>
                </div>
                <textarea id="$id" class="sjrkc-st-block-image-description sjrk-st-block-image-description" placeholder="{{../localizedMessages.message_imageDescriptionInputPlaceholder}}"></textarea>
            {{/getIds}}
        </div>
        <div class="sjrk-st-block-image-alt-text-container">
            {{#getIds "storyBlockImageAltText"}}
                <div class="sjrk-st-label-container fl-hidden-accessible">
                    <label for="$id">{{../localizedMessages.message_altTextInputLabel}}</label>
                </div>
                <textarea id="$id" class="sjrkc-st-block-image-alt-text sjrk-st-block-image-alt-text" placeholder="{{../localizedMessages.message_altTextInputPlaceholder}}"></textarea>
            {{/getIds}}
        </div>

        <!-- Container for the uploader -->
        <div class="sjrkc-st-block-uploader-container sjrk-st-block-uploader-container">
            <input name="file" type="file" accept="image/*" class="sjrkc-st-block-uploader-input sjrk-st-block-uploader-input" />
        </div>
        {{#if dynamicValues.hasMobileCamera}}
            <!-- Container for the camera capture -->
            <div class="sjrkc-st-block-camera-capture-container sjrk-st-block-camera-capture-container">
                <input name="file" type="file" accept="image/*" capture="camera" class="sjrkc-st-block-camera-capture-input sjrk-st-block-camera-capture-input" />
            </div>
        {{/if}}

    </form>
</div>
