<div class="sjrk-storyblock-block">
    <div class="sjrk-storyblock-image-preview-container">
        <img class="sjrkc-storyblock-image-preview sjrk-storyblock-image-preview" alt="" />
    </div>
    <form>
        <div class="sjrk-storyblock-image-buttons-container">
            <button type="button" class="sjrkc-storyblock-image-upload-button sjrk-storyblock-image-upload-button">{{localizedMessages.message_imageUploadButton}}</button>
            <button type="button" class="sjrkc-storyblock-image-capture-button sjrk-storyblock-image-capture-button">{{localizedMessages.message_imageCaptureButton}}</button>
        </div>

        <div class="sjrk-storyblock-image-alt-text-container">
            <div class="sjrk-storyTelling-label-container">
                <label for="{{uiStrings.imageAltTextIdForLabel}}">{{localizedMessages.message_imageAltTextInput}}</label>
            </div>
            <textarea id="{{uiStrings.imageAltTextIdForLabel}}" class="sjrkc-storyblock-image-alt-text sjrk-storyblock-image-alt-text"></textarea>
        </div>
        <div class="sjrk-storyblock-image-description-container">
            <div class="sjrk-storyTelling-label-container">
                <label for="{{uiStrings.imageDescriptionIdForLabel}}">{{localizedMessages.message_imageDescriptionInput}}</label>
            </div>
            <textarea id="{{uiStrings.imageDescriptionIdForLabel}}" class="sjrkc-storyblock-image-description sjrk-storyblock-image-description"></textarea>
        </div>

        <!-- Container for the uploader -->
        <div class="sjrkc-storyblock-uploader sjrk-storyblock-uploader">
            <input name="file" type="file" accept="image/*" class="sjrkc-storyblock-uploader-input sjrk-storyblock-uploader-input" />
        </div>

    </form>
</div>
