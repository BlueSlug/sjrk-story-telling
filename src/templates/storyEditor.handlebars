<form lang="{{localizedMessages.language}}" class="sjrk-st-story-editor-form sjrkc-st-story-editor-form">
    <div class="sjrk-st-storyEditorPage1 sjrkc-st-storyEditorPage1">
        <div class="sjrk-st-story-editor-buttons-container">
            <div class="sjrk-st-button-text-block-container sjrk-st-image-button-container">
                <button class="sjrk-st-button sjrk-st-button-text-block sjrkc-st-button-text-block" type="button"><span class="sjrk-st-button-text">{{localizedMessages.message_blockAddTextBlock}}</span></button>
            </div>
            <div class="sjrk-st-button-image-block-container sjrk-st-image-button-container">
                <button class="sjrk-st-button sjrk-st-button-image-block sjrkc-st-button-image-block" type="button"><span class="sjrk-st-button-text">{{localizedMessages.message_blockAddImageBlock}}</span></button>
            </div>
            <div class="sjrk-st-button-remove-blocks-container sjrk-st-image-button-container">
                <button class="sjrk-st-button sjrk-st-button-remove-blocks sjrkc-st-button-remove-blocks" type="button"><span class="sjrk-st-button-text">{{localizedMessages.message_blockRemoveBlocks}}</span></button>
            </div>
            <div class="sjrk-st-button-restore-blocks-container sjrk-st-image-button-container">
                <button class="sjrk-st-button sjrk-st-button-restore-blocks sjrkc-st-button-restore-blocks" type="button"><span class="sjrk-st-button-text">{{localizedMessages.message_blockRestoreBlocks}}</span></button>
            </div>
        </div>
        <!-- area where blocks will be added -->
        <div class="sjrk-st-story-editor-content sjrkc-st-story-editor-content"></div>
        <div class="sjrk-st-button-container">
            <a href="javascript:void(0)" class="sjrk-st-storyEditorNext sjrkc-st-storyEditorNext">{{localizedMessages.message_continue}}</a>
        </div>
    </div>

    <div class="sjrk-st-storyEditorPage2 sjrkc-st-storyEditorPage2">
        {{#getIds "title"}}
            <div class="sjrk-st-label-container">
                <label for="$id">{{../localizedMessages.message_titleInputLabel}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-st-storyTitle sjrkc-st-storyTitle" placeholder="{{../localizedMessages.message_titleInputPlaceholder}}" />
            </div>
        {{/getIds}}

        {{#getIds "author"}}
            <div class="sjrk-st-label-container">
                <label for="$id">{{../localizedMessages.message_authorInputLabel}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-st-storyAuthor sjrkc-st-storyAuthor" placeholder="{{../localizedMessages.message_authorInputPlaceholder}}" />
            </div>
        {{/getIds}}

        {{#getIds "keywords"}}
            <div class="sjrk-st-label-container">
                <label for="$id">{{../localizedMessages.message_addTagsText}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-st-storyTags sjrkc-st-storyTags" type="text" placeholder="{{../localizedMessages.message_addTagsPlaceholder}}">
            </div>
        {{/getIds}}

        <div class="sjrk-st-story-editor-footer-container">
            <div>
                <a href="javascript:void(0)" class="sjrk-st-storyEditorPrevious sjrkc-st-storyEditorPrevious">{{localizedMessages.message_goBack}}</a>
            </div>
            <div class="sjrk-st-link-container-right">
                <button class="sjrk-st-storySubmit sjrkc-st-storySubmit" type="button">{{localizedMessages.message_submitButton}}</button>
            </div>
        </div>
    </div>
</form>
