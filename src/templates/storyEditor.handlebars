<form lang="{{localizedMessages.language}}" class="sjrk-storyTelling-story-editor-form sjrkc-storyTelling-story-editor-form">
    <div class="sjrk-storyTelling-storyEditorPage1 sjrkc-storyTelling-storyEditorPage1">
        <div class="sjrk-storyTelling-story-editor-buttons-container">
            <div class="sjrk-storyTelling-button-text-block-container sjrk-storyTelling-image-button-container">
                <button class="sjrk-storyTelling-button sjrk-storyTelling-button-text-block sjrkc-storyTelling-button-text-block" type="button"><span class="sjrk-storyTelling-button-text">{{localizedMessages.message_blockAddTextBlock}}</span></button>
            </div>
            <div class="sjrk-storyTelling-button-image-block-container sjrk-storyTelling-image-button-container">
                <button class="sjrk-storyTelling-button sjrk-storyTelling-button-image-block sjrkc-storyTelling-button-image-block" type="button"><span class="sjrk-storyTelling-button-text">{{localizedMessages.message_blockAddImageBlock}}</span></button>
            </div>
            <div class="sjrk-storyTelling-button-remove-blocks-container sjrk-storyTelling-image-button-container">
                <button class="sjrk-storyTelling-button sjrk-storyTelling-button-remove-blocks sjrkc-storyTelling-button-remove-blocks" type="button"><span class="sjrk-storyTelling-button-text">{{localizedMessages.message_blockRemoveBlocks}}</span></button>
            </div>
            <div class="sjrk-storyTelling-button-restore-blocks-container sjrk-storyTelling-image-button-container">
                <button class="sjrk-storyTelling-button sjrk-storyTelling-button-restore-blocks sjrkc-storyTelling-button-restore-blocks" type="button"><span class="sjrk-storyTelling-button-text">{{localizedMessages.message_blockRestoreBlocks}}</span></button>
            </div>
        </div>
        <!-- area where blocks will be added -->
        <div class="sjrk-storyTelling-story-editor-content sjrkc-storyTelling-story-editor-content"></div>
        <div class="sjrk-storyTelling-button-container">
            <a href="javascript:void(0)" class="sjrk-storyTelling-storyEditorNext sjrkc-storyTelling-storyEditorNext">{{localizedMessages.message_continue}}</a>
        </div>
    </div>

    <div class="sjrk-storyTelling-storyEditorPage2 sjrkc-storyTelling-storyEditorPage2">
        {{#getIds "title"}}
            <div class="sjrk-storyTelling-label-container">
                <label for="$id">{{../localizedMessages.message_titleInputLabel}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-storyTelling-storyTitle sjrkc-storyTelling-storyTitle" placeholder="{{../localizedMessages.message_titleInputPlaceholder}}" />
            </div>
        {{/getIds}}

        {{#getIds "author"}}
            <div class="sjrk-storyTelling-label-container">
                <label for="$id">{{../localizedMessages.message_authorInputLabel}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-storyTelling-storyAuthor sjrkc-storyTelling-storyAuthor" placeholder="{{../localizedMessages.message_authorInputPlaceholder}}" />
            </div>
        {{/getIds}}

        {{#getIds "keywords"}}
            <div class="sjrk-storyTelling-label-container">
                <label for="$id">{{../localizedMessages.message_addTagsText}}</label>
            </div>
            <div>
                <input id="$id" class="sjrk-storyTelling-storyTags sjrkc-storyTelling-storyTags" type="text" placeholder="{{../localizedMessages.message_addTagsPlaceholder}}">
            </div>
        {{/getIds}}

        <div class="sjrk-storyTelling-story-editor-footer-container">
            <div>
                <a href="javascript:void(0)" class="sjrk-storyTelling-storyEditorPrevious sjrkc-storyTelling-storyEditorPrevious">{{localizedMessages.message_goBack}}</a>
            </div>
            <div class="sjrk-storyTelling-link-container-right">
                <button class="sjrk-storyTelling-storySubmit sjrkc-storyTelling-storySubmit" type="button">{{localizedMessages.message_submitButton}}</button>
            </div>
        </div>
    </div>
</form>
